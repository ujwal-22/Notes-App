<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgColor"
    tools:context=".ui.Fragment.EditNotesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextshape"
            android:padding="10dp"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/regular"
            android:textColor="#d1d1d1"
            android:textColorHint="#D1D1D1"
            android:hint="Title"/>

        <EditText
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextshape"
            android:padding="10dp"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:textColor="#d1d1d1"
            android:fontFamily="@font/regular"
            android:textColorHint="#D1D1D1"
            android:hint="Subtitle..."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/red"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/greendot"/>

            <ImageView
                android:id="@+id/yellow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/yellowdot"/>

            <ImageView
                android:id="@+id/green"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/reddot"/>

        </LinearLayout>

        <EditText
            android:id="@+id/notes"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:gravity="start"
            android:background="@drawable/edittextshape"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/regular"
            android:textColor="#d1d1d1"
            android:textColorHint="#D1D1D1"
            android:hint="Notes..."/>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonSaveNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="26dp"
        android:src="@drawable/done"
        app:backgroundTint="@color/redColor"
        android:layout_gravity="bottom|end" />

</FrameLayout>